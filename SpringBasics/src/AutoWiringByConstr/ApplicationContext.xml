<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
<bean id="bk" class="AutoWiringByConstr.Book">  
<property name="bookName" value="Harry Potter"></property>  
<property name="bookPrice" value="900"></property>
</bean>  
  
 <bean id="Category" class="AutoWiringByConstr.Categories" autowire="constructor">
 <property name="name" value="General books"></property>
 </bean>
  
</beans>  
